{
  "name": "optime",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NaveenDA/optime.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/NaveenDA/optime/issues"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "description": "A tiny less boiler plate",
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "clean-css-cli": "^4.3.0",
    "husky": "^2.3.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.16",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.6.1"
  },
  "engines": {
    "node": "<=8.11.3"
  },
  "homepage": "https://github.com/NaveenDA/optime#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all format lint "
    }
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "license": "ISC",
  "scripts": {
    "build": "npm-run-all css-*",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/optime.scss dist/css/optime.css",
    "css-minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/optime.min.css dist/css/optime.css",
    "css-prefix": "postcss --use autoprefixer --map false --output dist/css/optime.css dist/css/optime.css",
    "format": "prettier  --write 'src/scss/**/*.{scss,css}'",
    "lint": "stylelint \"src/scss/**/*.scss\" --cache --cache-location .cache/.stylelintcache --fix",
    "start": "nodemon -e scss  --exec 'npm run css-compile'"
  },
  "version": "1.0.0"
}
